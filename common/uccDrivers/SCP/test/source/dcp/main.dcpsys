;
; DCP system file for SCP driver test
;

pipeline scpPipeline
    use
        scp  as scpDevice      logThreshold=0
        next as nextStubDevice
    end
    connection
        scp.outputAddressQ       => next.outputAddressQ
        scp.outputCaptureLengthQ => next.outputCaptureLengthQ
        scp.outputDiscardLengthQ => next.outputDiscardLengthQ
        scp.outputIscrQ          => next.outputIscrQ
    end
end

map
    device
        scpDevice      as scpDriver
        nextStubDevice as nextStubDriver
    end
    pipeline
        scpPipeline0 as scpPipeline 0
    end
end
